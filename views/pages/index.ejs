<!DOCTYPE html>
<html lang="en">

<head>
  <meta name="viewport" content="initial-scale=1">
  <link type="text/css" href="/styles/base.css" rel="stylesheet">
  <link type="text/css" href="/styles/flex.css" rel="stylesheet">
  <script src="libs/jquery/jquery.js"></script>
</head>

<body>
  <div class="page-wrapper">
    <div class="card">
      <form class="main-form" action="/api/add_email" method="post">
      <div class="card-row">
        <img class="logo" src="/res/logo.png">
        <input class="email-input blink" name="email" type="text" placeholder="ENTER EMAIL"onfocus="this.placeholder = ''" onblur="this.placeholder = 'enter your text'">
        <button class="enter-button">enter</button>
      </div>
      </form>
    </div>
  </div>
</body>

<script>

  $(".blink").focus(function(){
    $(".enter-button").addClass("visible");
  });

</script>

</html>
